Item Index

<%= link_to "New item", new_item_path %>

<div class="col-md-6 col-md-offset-3">
	<table class="table">
		<thead>
			<tr>
				<th>Album Name</th>
				<th>Price</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
				<tr>
					<td><%= item.album_name %></td>
					<td><%= item.price %></td>
					<td>
						<%= link_to "Edit", edit_item_path(item) %>
						<%= link_to "Delete", item_path(item), method: :delete %>
					</td>

				</tr>
			<% end %>
		</tbody>
	</table>
</div>