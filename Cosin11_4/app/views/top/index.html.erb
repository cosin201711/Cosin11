<div class="container">
  <div class="row row-eq-height">
    <% @items.each do |item| %>
    <div class="col-sm-3">
      <div class="panel panel-primary">
  			<div class="panel-heading panel-size">
  				<h4><%= item.album_name %></h4>
  				<br>
  				<%= item.artist_name %>
  			</div>
  			<div class="panel-body"><img src="l_e_others_500.png" class="img-responsive" style="width:100%" alt="Image"></div>
  			<div class="panel-footer">
  				価格 | ¥<%= item.price %>

  				<a href="product_show.html" class="pull-right" type="submit" class="btn btn-default" aria-hidden="true">詳細</a></div>
    <% end %>
    </div>
</div>
