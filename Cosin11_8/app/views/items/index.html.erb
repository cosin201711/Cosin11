
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 class="col-md-2 col-md-offset-5">商品一覧</h1>
			<div class="title col-md-12"></div>
		</div>
	</div>

	<div class="row col-md-12">
		<%= form_tag(items_path, method: "get") do %>
			<%= text_field_tag :search, params[:search], class: "searchbar col-md-8 col-md-offset-2", placeholder: "検索..." %>
			<%= submit_tag "検索", class: "btn btn-success" %>
		<% end %>
	</div>

	<div class="row">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>アルバム名</th>
					<th>アーティスト名</th>
					<th>ジャンル</th>
					<th>販売日</th>
					<th>在庫数</th>
					<th>販売状況</th>
					<th>価格</th>
					<th colspan="3">アクション</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td><%= item.album_name %></td>
					<td>
						<ruby>
							<%= item.artist_name %> 
									<rt><%= item.artist_name_kana %></rt>
						</ruby>
					</td>
					<td><%= item.genre %></td>
					<td><%= item.luanch_date %></td>
					<td><%= item.stock %></td>
					<td><%= item.item_status %></td>
					<td>¥ <%= item.price.to_s(:delimited) %></td>
					<td><%= link_to item_path(item) do %><i class="fa fa-window-maximize" aria-hidden="true"></i><% end%></td>
					<td><%= link_to edit_item_path(item) do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %></td>
					<td><%= link_to item_path(item), method: :delete, "data-confirm" => "Are you sure?" do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %></td>
				</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>



